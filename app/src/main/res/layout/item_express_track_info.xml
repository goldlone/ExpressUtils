        <TextView
            android:id="@+id/tv_express_track_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="2017-05-29 22:10:27"
            android:textAlignment="viewEnd"
            />

    </LinearLayout>

</LinearLayout>